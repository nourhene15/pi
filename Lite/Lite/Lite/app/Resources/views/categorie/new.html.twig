{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categorie creation</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="exampleInputEmail1">Nom : </label>
                    {% if form.nom.vars.valid==true %}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control','row':'1'} }) }}
                    {% else %}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control is-invalid','row':'1'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(form.nom) }}</span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Discreption : </label>
                    {% if form.discreption.vars.valid==true %}
                        {{ form_widget(form.discreption, { 'attr': {'class': 'form-control','row':'1'} }) }}
                    {% else %}
                        {{ form_widget(form.discreption, { 'attr': {'class': 'form-control is-invalid','row':'1'} }) }}
                    {% endif %}
                    <span class="error invalid-feedback">{{ form_errors(form.discreption) }}</span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
            {{ form_end(form) }}

        </div>
        <!-- /.card -->

    </section>
{% endblock %}
